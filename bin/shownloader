#!/bin/bash

echo '   ______ __                __             __'
echo '  / __/ // /__ _    _____  / /__  ___ ____/ /__ ____'
echo ' _\ \/ _  / _ \ |/|/ / _ \/ / _ \/ _ `/ _  / -_) __/'
echo '/___/_//_/\___/__,__/_//_/_/\___/\_,_/\_,_/\__/_/'
echo " "

read -p "File URL: " shownloader_url
read -p "File name: " shownloader_file
read -p "Unzip the file? [Y/n] " shownloader_unzip

if [[ "$shownloader_unzip" =~ (y|Y|yes|Yes|YES) ]]
then

  mkdir ~/SHownloader 2>/dev/null
  mkdir ~/SHownloader/$shownloader_file 2>/dev/null
  cd ~/SHownloader/$shownloader_file 2>/dev/null

    echo "SHownloading..."
    wget "$shownloader_url" -O $shownloader_file &>/dev/null
    echo "SHownloaded!"    
      echo "Unzipping..."
      unzip $shownloader_file &>/dev/null
      echo "Unzipped!"
      echo "Saved under /home/$(whoami)/SHownloader/$shownloader_file/"

elif [[ "$shownloader_unzip" =~ (n|N|no|No|NO) ]]
then

  mkdir ~/SHownloader 2>/dev/null
  mkdir ~/SHownloader/$shownloader_file 2>/dev/null
  cd ~/SHownloader/$shownloader_file 2>/dev/null
    
    echo "SHownloading..."
    wget "$shownloader_url" -O $shownloader_file &>/dev/null
    echo "SHownloaded!"
    echo "Saved under /home/$(whoami)/SHownloader/$shownloader_file/"
    
else
  echo "Error"
fi
